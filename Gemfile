source 'http://rubygems.org'
gemspec

group :development do

  group :project do

    # Tag file
    gem 'ripper-tags'

    gem 'vim-flavor'
  end

  group :debug do

    # Debug / trace
    gem 'byebug'
  end

  group :testing do

    # Property testing
    gem 'rantly',  :git => 'https://github.com/hayeah/rantly.git'
  end

  group :guard do

    gem 'guard'

    # Build tags
    gem 'guard-ctags-bundler'

    # Rake task automation
    gem 'guard-rake'
  end
end

